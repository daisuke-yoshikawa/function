<h1>ブログ一覧</h1>

<p><%= notice %></p>

<div class="container">
  <div class="row">
<% @blogs.each do |blog| %>
  <div class="col-xs-12 col-md-6">
    <h2><%= blog.title %></h2>
    <p><%= blog.content %></p>
    <% if blog.user == current_user %>
    <%= link_to "ブログを編集する", edit_blog_path(blog.id) , class: 'btn btn-info' %>
    <%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete  ,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger' %>
    <% else %>
    <%= link_to '詳細を確認する', blog_path(blog.id) ,class: 'btn btn-default' %>
    <td><%= image_tag(blog.image.url) if blog.image.url %></td>
    <% end %>
  </div>
<% end %>
</div>
</div>

<br>

<%= link_to '新しくブログを投稿する', new_blog_path,class: 'btn btn-default' %>
